{
  "name": "mcp-pty",
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": true,
  "scripts": {
    "reset": "bun x --bun rimraf './**/node_modules' node_modules; bun i",
    "check": "tsc --noEmit",
    "format": "prettier --write packages",
    "build": "bun run build --filter=\"*\"",
    "dev": "bun run dev --filter=\"@app/*\"",
    "start": "bun run start --filter=\"@app/mcp-server\""
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ]
}
