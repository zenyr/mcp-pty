{
  "name": "mcp-pty",
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "private": true,
  "scripts": {
    "reset": "bun x --bun rimraf './**/node_modules' node_modules; bun i",
    "check": "bun --filter=\"*\" run check",
    "format": "bun biome format --write",
    "lint": "bun biome lint --write",
    "build": "bun --filter=\"*\" run build",
    "dev": "bun --filter=\"@app/*\" run dev",
    "start": "bun --filter=\"@app/mcp-server\" run start"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ]
}
